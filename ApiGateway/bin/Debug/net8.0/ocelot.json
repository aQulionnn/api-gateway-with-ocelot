{
  "Routes": [
    {
      "UpstreamPathTemplate": "/authors/{everything}",
      "UpstreamHttpMethod": ["GET", "POST", "PUT", "DELETE"],
      "DownstreamPathTemplate": "/api/authors/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "15s",
        "PeriodTimespan": 1,
        "Limit": 1
      }
    },
    {
      "UpstreamPathTemplate": "/books/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "DownstreamPathTemplate": "/api/books/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        { 
          "Host": "localhost", 
          "Port": 5002
        }
      ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "15s",
        "PeriodTimespan": 1,
        "Limit": 1
      }
    },
    {
      "UpstreamPathTemplate": "/authors/{id}",
      "UpstreamHttpMethod": ["GET"],
      "DownstreamPathTemplate": "/api/authors/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "Key": "GetAuthorById"
    },
    {
      "UpstreamPathTemplate": "/books/author/{id}",
      "UpstreamHttpMethod": ["GET"],
      "DownstreamPathTemplate": "/api/books/author/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "Key": "GetBooksByAuthorId" 
    }
  ],
  "Aggregates": [
    {
      "UpstreamPathTemplate": "/author/{id}/with-books",
      "UpstreamHttpMethod": ["GET"],
      "RouteKeys": [ "GetAuthorById", "GetBooksByAuthorId" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:5000"
  }
}